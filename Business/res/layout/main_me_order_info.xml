<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <include layout="@layout/main_top" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/varbg"
        android:paddingBottom="8dp"
        android:paddingLeft="40dp"
        android:paddingTop="8dp"
        android:text="@string/product"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/mmoif_list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:listSelector="@null"
        android:paddingLeft="40dp"
        android:paddingRight="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/varbg"
        android:paddingBottom="8dp"
        android:paddingLeft="40dp"
        android:paddingTop="8dp"
        android:text="@string/productinfo"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#fff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/mmoif_time"
            android:layout_width="fill_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/itembg"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/itembg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/mmoif_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/mmoif_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/itembg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/mmoif_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/tomato" />

            <TextView
                android:id="@+id/mmoif_sun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/tomato" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/itembg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/mmoif_ding"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/tomato" />

            <TextView
                android:id="@+id/mmoif_fu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/tomato" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>