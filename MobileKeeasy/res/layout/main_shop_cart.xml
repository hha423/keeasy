<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <include layout="@layout/main_top" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/varbg"
        android:paddingBottom="8dp"
        android:paddingLeft="40dp"
        android:paddingTop="8dp"
        android:text="@string/product"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/msc_list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:listSelector="@null"
        android:paddingLeft="40dp"
        android:paddingRight="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/varbg"
        android:paddingBottom="8dp"
        android:paddingLeft="40dp"
        android:paddingTop="8dp"
        android:text="@string/productinfo"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/msc_id"
            android:layout_width="fill_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/itembg"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />

        <TextView
            android:id="@+id/msc_state"
            android:layout_width="fill_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/itembg"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />

        <TextView
            android:id="@+id/msc_name"
            android:layout_width="fill_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/itembg"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />

        <TextView
            android:id="@+id/msc_pay"
            android:layout_width="fill_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="40dp"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/varbg"
        android:paddingBottom="8dp"
        android:paddingLeft="40dp"
        android:paddingTop="8dp"
        android:text="@string/payway"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/msc_alipay"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/clickd_bg"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/alipay" />

        <TextView
            android:id="@+id/msc_unpay"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/clickd_bg"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/unpay" />
    </LinearLayout>

</LinearLayout>