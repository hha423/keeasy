<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".JinshiActivity" >

    <include layout="@layout/toplayout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <com.evan.eyesight.EyeTable
                android:id="@+id/eye_test"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <ImageButton
                android:id="@+id/btn_up"
                android:layout_width="50.0dip"
                android:layout_height="80.0dip"
                android:layout_gravity="left"
                android:layout_marginTop="60.0dip"
                android:background="#96d9d9d9"
                android:src="@android:drawable/arrow_up_float" />

            <ImageButton
                android:id="@+id/btn_eye_test"
                android:layout_width="60.0dip"
                android:layout_height="50.0dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60.0dip"
                android:background="#96d9d9d9"
                android:src="@drawable/btn_eye_test" />

            <ImageButton
                android:id="@+id/btn_down"
                android:layout_width="50.0dip"
                android:layout_height="80.0dip"
                android:layout_gravity="left"
                android:layout_marginTop="160.0dip"
                android:background="#96d9d9d9"
                android:src="@android:drawable/arrow_down_float" />
        </FrameLayout>
    </ScrollView>

</LinearLayout>